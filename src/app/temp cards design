        <label><strong>Title:</strong></label> {{ book.title }} <br>
        <label><strong>Authors:</strong></label> {{ book.authors }} <br>
        <label><strong>Published Date:</strong></label> {{ book.published }} <br>
        <button id="edit{{i}}" type="button" class="btn btn-success" (click)="openEditBookModal(i)" style="width: 75px">
            <i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;Edit
        </button>
        <button class="btn btn-danger" aria-hidden="true" id="delete{{i}}" name="delete"
                (click)="deleteBook(i)"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;Delete
        </button>
